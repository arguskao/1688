---
export const prerender = false; // Use server-side rendering

import { getProductById } from '../../lib/products';
import type { Product } from '../../types/product';
import { AddToQuoteButton } from '../../components/AddToQuoteButton';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/products');
}

const product = await getProductById(id, Astro.locals.runtime);

if (!product) {
  return Astro.redirect('/products');
}
---

<!DOCTYPE html>
<html lang="zh-TW">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{product.name_en} - {product.category} | 詢價清單系統</title>
    <meta name="title" content={`${product.name_en} - ${product.category} | 詢價清單系統`} />
    <meta name="description" content={product.description_en} />
    <meta name="keywords" content={`${product.name_en}, ${product.sku}, ${product.category}, B2B, 詢價, 批發`} />
    <meta name="author" content="詢價清單系統" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="product" />
    <meta property="og:url" content={`https://yourdomain.com/products/${product.product_id}`} />
    <meta property="og:title" content={`${product.name_en} - ${product.category}`} />
    <meta property="og:description" content={product.description_en} />
    <meta property="og:image" content={product.image_url} />
    <meta property="og:site_name" content="詢價清單系統" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={`https://yourdomain.com/products/${product.product_id}`} />
    <meta property="twitter:title" content={`${product.name_en} - ${product.category}`} />
    <meta property="twitter:description" content={product.description_en} />
    <meta property="twitter:image" content={product.image_url} />
    
    <!-- Product Schema.org -->
    <script type="application/ld+json" is:inline set:html={JSON.stringify({
      "@context": "https://schema.org/",
      "@type": "Product",
      "name": product.name_en,
      "image": product.image_url,
      "description": product.description_en,
      "sku": product.sku,
      "category": product.category,
      "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock",
        "priceCurrency": "TWD"
      }
    })} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={`https://yourdomain.com/products/${product.product_id}`} />
    
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-8 max-w-6xl">
      <!-- Breadcrumb -->
      <nav class="mb-6 text-sm">
        <a href="/" class="text-blue-600 hover:underline">首頁</a>
        <span class="mx-2">/</span>
        <a href="/products" class="text-blue-600 hover:underline">產品列表</a>
        <span class="mx-2">/</span>
        <span class="text-gray-600">{product.name_en}</span>
      </nav>

      <!-- Product Detail -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="grid md:grid-cols-2 gap-8 p-8">
          <!-- Product Image -->
          <div class="aspect-square bg-gray-200 rounded-lg overflow-hidden">
            <img 
              src={product.image_url} 
              alt={product.name_en}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>

          <!-- Product Info -->
          <div class="flex flex-col">
            <div class="mb-2">
              <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full">
                {product.category}
              </span>
            </div>
            
            <h1 class="text-3xl font-bold text-gray-900 mb-2">
              {product.name_en}
            </h1>
            
            <p class="text-gray-600 mb-1">
              <span class="font-semibold">SKU:</span> {product.sku}
            </p>
            
            <p class="text-gray-600 mb-1">
              <span class="font-semibold">Product ID:</span> {product.product_id}
            </p>

            <div class="my-6 border-t border-gray-200"></div>

            <h2 class="text-xl font-semibold text-gray-900 mb-3">產品規格</h2>
            <div class="bg-gray-50 rounded-lg p-4 mb-6">
              <dl class="space-y-2">
                {Object.entries(product.specs_json).map(([key, value]) => (
                  <div class="flex flex-col sm:flex-row">
                    <dt class="font-semibold text-gray-700 capitalize sm:w-1/3">
                      {key.replace(/_/g, ' ')}:
                    </dt>
                    <dd class="text-gray-600 sm:w-2/3">
                      {Array.isArray(value) ? value.join(', ') : String(value)}
                    </dd>
                  </div>
                ))}
              </dl>
            </div>

            <!-- Add to Quote Button -->
            <div class="mt-auto">
              <AddToQuoteButton
                client:load
                productId={product.product_id}
                productName={product.name_en}
                sku={product.sku}
                imageUrl={product.image_url}
                className="w-full"
              />
              <p class="text-sm text-gray-500 text-center mt-2">
                點擊加入詢價清單後，可以一次詢問多個產品的價格
              </p>
            </div>
          </div>
        </div>

        <!-- Product Description - Full Width at Bottom -->
        <div class="border-t border-gray-200 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">產品描述</h2>
          <div class="prose max-w-none text-gray-700 leading-relaxed mb-8">
            <p>{product.description_en}</p>
          </div>

          <!-- Product Images Gallery -->
          {product.images && product.images.length > 0 && (
            <div class="mt-8">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">產品圖片</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {product.images.map((image: any, index: number) => (
                  <div class="bg-gray-100 rounded-lg overflow-hidden">
                    <img 
                      src={image.url} 
                      alt={image.alt_text || product.name_en}
                      class="w-full h-auto object-cover"
                      loading="lazy"
                    />
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>

      <!-- Back to Products -->
      <div class="mt-8 text-center">
        <a 
          href="/products" 
          class="inline-block text-blue-600 hover:text-blue-800 font-semibold"
        >
          ← 返回產品列表
        </a>
      </div>
    </div>

  </body>
</html>
