---
export const prerender = false; // Use server-side rendering

import { getAllProducts, getAllCategories } from '../../lib/products';
import { AddToQuoteButton } from '../../components/AddToQuoteButton';
import '../../styles/global.css';

const products = await getAllProducts(Astro.locals.runtime);
const categories = await getAllCategories(Astro.locals.runtime);

const SITE_URL = import.meta.env.SITE || 'https://0e3d34ef.1688-dek.pages.dev';
const pageUrl = `${SITE_URL}/products`;
const categoryList = categories.join('、');
---

<!DOCTYPE html>
<html lang="zh-TW">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#2563eb" />
    
    <!-- Primary Meta Tags -->
    <title>產品目錄 - 瀏覽所有產品 | 詢價清單系統</title>
    <meta name="title" content="產品目錄 - 瀏覽所有產品 | 詢價清單系統" />
    <meta name="description" content={`瀏覽我們的完整產品目錄，包含${categoryList}等多種分類。選擇您感興趣的產品加入詢價清單，一次詢問多個產品價格。`} />
    <meta name="keywords" content={`產品目錄, ${categories.join(', ')}, B2B產品, 批發詢價`} />
    <meta name="author" content="詢價清單系統" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content="產品目錄 - 瀏覽所有產品" />
    <meta property="og:description" content="瀏覽我們的完整產品目錄，選擇您感興趣的產品加入詢價清單" />
    <meta property="og:locale" content="zh_TW" />
    <meta property="og:site_name" content="詢價清單系統" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:url" content={pageUrl} />
    <meta name="twitter:title" content="產品目錄 - 瀏覽所有產品" />
    <meta name="twitter:description" content="瀏覽我們的完整產品目錄，選擇您感興趣的產品加入詢價清單" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={pageUrl} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Structured Data - BreadcrumbList -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "首頁", "item": SITE_URL },
        { "@type": "ListItem", "position": 2, "name": "產品目錄", "item": pageUrl }
      ]
    })} />
    
    <!-- Structured Data - ItemList -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ItemList",
      "name": "產品目錄",
      "numberOfItems": products.length,
      "itemListElement": products.slice(0, 10).map((p, i) => ({
        "@type": "ListItem",
        "position": i + 1,
        "item": {
          "@type": "Product",
          "name": p.name_en,
          "url": `${SITE_URL}/products/${p.product_id}`,
          "image": p.image_url,
          "sku": p.sku
        }
      }))
    })} />
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-8">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">產品目錄</h1>
        <p class="text-gray-600">瀏覽我們的產品，選擇您感興趣的項目加入詢價清單</p>
      </div>

      <!-- Categories -->
      <div class="mb-6 flex flex-wrap gap-2">
        <span class="text-gray-700 font-semibold mr-2">分類：</span>
        <button class="px-4 py-2 bg-blue-600 text-white rounded-full text-sm font-semibold">
          全部
        </button>
        {categories.map(category => (
          <button class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-full text-sm font-semibold transition-colors">
            {category}
          </button>
        ))}
      </div>

      <!-- Products Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {products.map(product => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <a href={`/products/${product.product_id}`}>
              <div class="aspect-square bg-gray-200 overflow-hidden">
                <img 
                  src={product.image_url} 
                  alt={product.name_en}
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
              </div>
            </a>
            
            <div class="p-4">
              <div class="mb-2">
                <span class="inline-block px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">
                  {product.category}
                </span>
              </div>
              
              <a href={`/products/${product.product_id}`}>
                <h2 class="text-xl font-semibold text-gray-900 mb-2 hover:text-blue-600 transition-colors">
                  {product.name_en}
                </h2>
              </a>
              
              <p class="text-sm text-gray-600 mb-1">
                SKU: {product.sku}
              </p>
              
              <p class="text-gray-700 text-sm line-clamp-2 mb-4">
                {product.description_en}
              </p>
              
              <div class="flex gap-2">
                <a 
                  href={`/products/${product.product_id}`}
                  class="w-2/5 text-center bg-gray-100 hover:bg-gray-200 text-gray-800 font-semibold py-2 px-4 rounded transition-colors"
                >
                  查看詳情
                </a>
                <div class="w-3/5">
                  <AddToQuoteButton
                    client:load
                    productId={product.product_id}
                    productName={product.name_en}
                    sku={product.sku}
                    imageUrl={product.image_url}
                    className="w-full py-2 px-4"
                  />
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Quote List Link -->
      <div class="mt-12 text-center">
        <a 
          href="/quote-list" 
          class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg transition-colors"
        >
          查看詢價清單
        </a>
      </div>
    </div>

  </body>
</html>
